<div class="col-md-3 data-card">

    <figure class="card-img">
        <a href="/movies/{{this.id}}">
            {{#if poster_path}}
            <img src='https://image.tmdb.org/t/p/w300{{this.poster_path}}' alt="{{this.title}}">
            {{/if}}

            {{#unless poster_path}}
            <img src='/images/noimage.png' alt="{{this.title}}">
            {{/unless}}
        </a>
    </figure>

    <div class="card-text">

        <h5>{{this.title}}</h5>

    </div>


</div>