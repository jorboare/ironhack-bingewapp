<section class="container">
    <article class="row justify-content-center">

        <div class="col-md-3 details">
            <img class="card-img-top" src='https://image.tmdb.org/t/p/w300{{thisSerie.poster_path}}'
                alt="serie image cap">
        </div>

        <div class="col-md-8">
            <div class="card" style="width: 100%">
                <div class="card-body">
                    <h2 class="card-title">{{thisSerie.name}}</h2>
                    {{#if thisSerie.tagline}}
                    <p>{{thisSerie.tagline}}</p>
                    {{/if}}

                    <p class="card-text">
                        {{#each thisSerie.genres}}
                        {{name}} |
                        {{/each}}
                    </p>

                    <p class="card-text">Released: {{first_air_date.month}} {{first_air_date.day}},
                        {{first_air_date.year}}
                    </p>
                    <p class="card-text">{{thisSerie.overview}}</p>
                    <p class="card-text">Seasons: {{thisSerie.number_of_seasons}} | Episodes:
                        {{thisSerie.number_of_episodes}}</p>
                </div>
            </div>
        </div>

        {{#if isLogged}}
        <div class="col-md-1">

            <form action="/series/{{thisSerie.id}}?add=watchlist" method="POST">
                <button id="btn-watchlist" type="submit" class="btn btn-info btn-block" data-toggle="button"
                    aria-pressed="false"><i class="fas fa-plus"></i></button>
            </form>
            <br>
            <form action="/series/{{thisSerie.id}}?add=likes" method="POST">
                <button id="btn-like" type="submit" class="btn btn-info btn-block" data-toggle="button"
                    aria-pressed="false"><i class="far fa-heart"></i></button>
            </form>
            <br>
            <form action="/series/{{thisSerie.id}}?add=seen" method="POST">
                <button id="btn-seen" type="submit" class="btn btn-info btn-block" data-toggle="button"
                    aria-pressed="false"><i class="fas fa-check"></button>
            </form>

        </div>
        {{/if}}

    </article>

    <hr>
    <article class="row justify-content-center">

        {{#each topPopularActors}}

        <div class="col-sm-6 col-md-3" style="padding: 30px;">

            <div class="card" style="width: 100%;">
                {{#if profile_path}}
                <img class="card-img-top" src='https://image.tmdb.org/t/p/w300{{profile_path}}' alt="actor image cap">
                {{/if}}
                {{#unless profile_path}}
                <img class="card-img-top" src='/images/personimg.png' alt="actor image cap">
                {{/unless}}
                <div class="card-body">

                    <h5 class="card-title">{{name}}</h5>
                    <p class="card-text">{{character}}</p>
                    <a href="/actors/{{id}}" class="btn btn-info btn-block">Details</a>

                </div>

            </div>

        </div>


        {{/each}}

    </article>

</section>