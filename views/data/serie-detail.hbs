<section class="container">

    <article class="row justify-content-center">

        <div class="col-md-3">

            {{#if thisSerie.poster_path}}
            <img src='https://image.tmdb.org/t/p/w300{{thisSerie.poster_path}}' alt="{{thisSerie.name}}">
            {{/if}}

            {{#unless thisSerie.poster_path}}
            <img src='/images/noimage.png' alt="{{thisSerie.name}}">
            {{/unless}}

        </div>

        <div class="col-md-8 details-card">

            <h2>{{thisSerie.name}}</h2>

            {{#if thisSerie.tagline}}
            <h6>{{thisSerie.tagline}}</h6>
            {{/if}}

            <div class="emphasis1">
                {{#each thisSerie.genres}}
                <p>{{name}}</p>
                {{/each}}
            </div>

            <p><b> Released:</b> {{first_air_date.month}} {{first_air_date.day}}, {{first_air_date.year}}</p>
            <p>{{thisSerie.overview}}</p>

            <div class="emphasis2">
                <p><b>Seasons:</b> {{thisSerie.number_of_seasons}}</p>
                <p><b>Episodes:</b> {{thisSerie.number_of_episodes}}</p>
            </div>

        </div>

        {{#if isLogged}}
        <div class="col-md-1">

            <form action="/series/{{thisSerie.id}}?add=watchlist" method="POST">
                <button id="btn-watchlist" type="submit" class="btn btn-info small-btn" data-toggle="button"
                    aria-pressed="false" title="Add to watchlist">
                    {{!-- <img src="/images/noun_add_1379203.svg" alt="Add to watchlist"> --}}
                    <svg width="1.4em" height="1.4em" viewBox="0 0 16 16" class="bi bi-plus-circle" fill="currentColor"
                        xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                            d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                        <path fill-rule="evenodd"
                            d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                    </svg>
                </button>
            </form>
            <br>
            <form action="/series/{{thisSerie.id}}?add=seen" method="POST">
                <button id="btn-like" type="submit" class="btn btn-info small-btn" data-toggle="button"
                    aria-pressed="false" title="Add to seen list">
                    {{!-- <img src="/images/noun_like_1379925.svg" alt="Add to likes list"> --}}
                    <svg width="1.4em" height="1.4em" viewBox="0 0 16 16" class="bi bi-check2" fill="currentColor"
                        xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                            d="M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0z" />
                    </svg>
                </button>
            </form>
            <br>
            <form action="/series/{{thisSerie.id}}?add=likes" method="POST">
                <button id="btn-seen" type="submit" class="btn btn-info small-btn" data-toggle="button"
                    aria-pressed="false" title="Add to likes list">
                    {{!-- <img src="/images/noun_checkmark_1379253.svg" alt="Add to seen list"> --}}
                    <svg width="1.4em" height="1.4em" viewBox="0 0 16 16" class="bi bi-suit-heart" fill="currentColor"
                        xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                            d="M8 6.236l.894-1.789c.222-.443.607-1.08 1.152-1.595C10.582 2.345 11.224 2 12 2c1.676 0 3 1.326 3 2.92 0 1.211-.554 2.066-1.868 3.37-.337.334-.721.695-1.146 1.093C10.878 10.423 9.5 11.717 8 13.447c-1.5-1.73-2.878-3.024-3.986-4.064-.425-.398-.81-.76-1.146-1.093C1.554 6.986 1 6.131 1 4.92 1 3.326 2.324 2 4 2c.776 0 1.418.345 1.954.852.545.515.93 1.152 1.152 1.595L8 6.236zm.392 8.292a.513.513 0 0 1-.784 0c-1.601-1.902-3.05-3.262-4.243-4.381C1.3 8.208 0 6.989 0 4.92 0 2.755 1.79 1 4 1c1.6 0 2.719 1.05 3.404 2.008.26.365.458.716.596.992a7.55 7.55 0 0 1 .596-.992C9.281 2.049 10.4 1 12 1c2.21 0 4 1.755 4 3.92 0 2.069-1.3 3.288-3.365 5.227-1.193 1.12-2.642 2.48-4.243 4.38z" />
                    </svg>

                </button>
            </form>
        </div>
        {{/if}}

    </article>

    <br>

    <article class="row justify-content-center">

        {{#each topPopularActors}}

        {{>relActorCard}}

        {{/each}}

    </article>

</section>