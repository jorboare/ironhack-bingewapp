<section class="container">

    <h2>Movies</h2>

    <article class="row justify-content-center">

        {{#each allMovies}}

            <div class="card" style="width: 14rem; margin: 25px;">

                <img class="card-img-top" src='images/baby-driver-rory-hi-res.jpg' alt="serie image cap"
                    style="object-fit: cover; width: 100%;">

                <div class="card-body" style="text-align: center">

                    <h5 class="card-title">{{title}}</h5>
                    <a href="/movies/{{id}}" class="btn btn-info btn-block">Details</a>
                        
                </div>

            </div>

        {{/each}}

    </article>

</section>