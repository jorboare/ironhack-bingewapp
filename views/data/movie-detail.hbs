<section class="container">
    <article class="row justify-content-center">
        <div class="col-md-3 details">
            <img class="card-img-top" src='images/baby-driver-rory-hi-res.jpg' alt="serie image cap">
        </div>
        <div class="col-md-8">
            <div class="card" style="width: 100%">
                <div class="card-body">
                    <h2 class="card-title">{{movie.title}}</h2>
                    <p class="card-text">Released: {{release_date.month}} {{release_date.day}}, {{release_date.year}}
                    </p>
                    <p class="card-text">{{movie.overview}}</p>

                </div>
            </div>
        </div>
        <div class="col-md-1">
            <button id="btn-watchlist" type="button" class="btn btn-info btn-block" data-toggle="button" aria-pressed="false">
                WL
            </button>
            <button id="btn-like" type="button" class="btn btn-info btn-block" data-toggle="button" aria-pressed="false">
                Like
            </button>
            <button id="btn-seen" type="button" class="btn btn-info btn-block" data-toggle="button" aria-pressed="false">
                Seen
            </button>
        </div>

    </article>

</section>

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="/javascripts/axios/details-page.js"></script>