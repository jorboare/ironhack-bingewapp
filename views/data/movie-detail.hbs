<section class="container">
    <article class="row justify-content-center">
        <div class="col-md-3 details">
            <img class="card-img-top" src='https://image.tmdb.org/t/p/w300{{thisMovie.poster_path}}'
                alt="serie image cap" style="object-fit: cover; width: 100%;">
            {{!-- src="images/{{thisMovie.img}}" --}}
        </div>
        <div class="col-md-8">
            <div class="card" style="width: 100%">
                <div class="card-body">
                    <h2 class="card-title">{{thisMovie.title}}</h2>
                    <p class="card-text">{{thisMovie.overview}}</p>

                </div>
            </div>
        </div>

        {{#if isLogged}}
        <div class="col-md-1">

            <form action="/movies/{{thisMovie.id}}?add=watchlist" method="POST">
                <button id="btn-watchlist" type="submit" class="btn btn-info btn-block" data-toggle="button"
                    aria-pressed="false">
                    <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-plus" fill="currentColor"
                        xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                            d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                    </svg>
                </button>
            </form>
            <br>
            <form action="/movies/{{thisMovie.id}}?add=likes" method="POST">
                <button id="btn-like" type="submit" class="btn btn-info btn-block" data-toggle="button"
                    aria-pressed="false">
                    <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-heart" fill="currentColor"
                        xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                            d="M8 2.748l-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z" />
                    </svg>
                </button>
            </form>
            <br>
            <form action="/movies/{{thisMovie.id}}?add=seen" method="POST">
                <button id="btn-seen" type="submit" class="btn btn-info btn-block" data-toggle="button"
                    aria-pressed="false">
                    <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-check2" fill="currentColor"
                        xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                            d="M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0z" />
                    </svg>
                </button>
            </form>

        </div>
        {{/if}}
    </article>

</section>

