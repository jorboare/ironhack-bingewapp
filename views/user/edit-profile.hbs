<section class="container">
    <article class="row justify-content-center">
        <div class="col-md-8 user">

            <h2>Edit your profile</h2>
            <hr>
            <form action="/profile/edit?id={{user.id}}" method="POST">
                <div class="form-group">
                    <label for="nameInput">Name:</label>
                    <input name="name" type="text" class="form-control" id="nameInput" value="{{user.name}}">
                </div>
                <div class="form-group">
                    <label for="emailInput">Email:</label>
                    <input name="email" type="email" class="form-control" id="emailInput" value="{{user.email}}">
                </div>
                <div class="form-group">
                    <label for="aboutInput">About:</label>
                    <input name="about" type="text" class="form-control" id="aboutInput" value="{{user.about}}">
                </div>
                <div class="form-group">
                    <label for="imgInput">Profile picture:</label>
                    <input name="img" type="text" class="form-control" id="imgInput" value="{{user.img}}"
                        aria-describedby="imgHelp">
                    <small id="imgHelp" class="form-text text-muted">Please, include the link to your preferred
                        picture.</small>
                </div>
                <button type="submit" class="btn btn-info btn-block">Save changes</button>

                {{#if errorMsg}}
                <p style="margin-top: 10px;background: #dc3545; color: white; text-align: center; padding: 10px">
                    {{errorMsg}}</p>
                {{/if}}

            </form>

        </div>
    </article>
</section>