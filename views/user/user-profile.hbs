<section class="container">

    <article class="row justify-content-center">
        <div class="col user">
            {{!-- <figure>
                <img src="{{user.img}}" alt="{{user.name}} profile picture">
            </figure> --}}
            <h2>Welcome {{theUser.name}}</h2>
            <hr>
        </div>
    </article>

    <article class="row justify-content-center">
        <div class="col-md-9">
            <h6>{{theUser.email}}</h6>
            <p>{{theUser.about}}</p>
        </div>
        <div class="col-md-3">
            <a href="/profile/edit?id={{theUser.id}}" class="btn btn-info btn-block">Edit profile</a>

            <a href="/profile/delete?id={{theUser.id}}" class="btn btn-danger btn-block">Delete account</a>
        </div>
    </article>

    {{#if moviesListEmpty}}
    <article class="row justify-content-right">
        <div class="col-2">
            <a href="/movies" class="btn btn-info btn-block">Add new movies</a>
        </div>
    </article>
    {{/if}}
    {{#if seriesListEmpty}}
    <article class="row justify-content-rigth">
        <div class="col-2">
            <a href="/series" class="btn btn-info btn-block">Add new series</a>
        </div>
    </article>
    {{/if}}

    <article class="row justify-content-center user-contents">

        {{#if seedsData}}
        <div class="col-md-4 user-columns">
            <a href="/profile/watchlist?id={{theUser.id}}">
                <h6><i>Last added to</i></h6>
                <h5>Watchlist</h5>
            </a>
            <hr>
            <div id="user-watchlist" class="row">

                {{>listMovieCardSeed list=lastMovieWL}}

                {{>listSeriesCardSeed list=lastSeriesWL}}

            </div>
        </div>

        <div class="col-md-4 user-columns">
            <a href="/profile/likes?id={{theUser.id}}">
                <h6><i>Last added to</i></h6>
                <h5>Likes</h5>
            </a>
            <hr>
            <div id="user-likes" class="row">

                {{>listMovieCardSeed list=lastMovieLK}}

                {{>listSeriesCardSeed list=lastSeriesLK}}

            </div>
        </div>

        <div class="col-md-4 user-columns">
            <a href="/profile/seen?id={{theUser.id}}">
                <h6><i>Last added to</i></h6>
                <h5>Seen</h5>
            </a>
            <hr>
            <div id="user-seen" class="row">

                {{>listMovieCardSeed list=lastMovieSN}}

                {{>listSeriesCardSeed list=lastSeriesSN}}

            </div>
        </div>
        {{/if}}

        {{#if apiData}}
        <div class="col-md-4 user-columns">
            <a href="/profile/watchlist?id={{theUser.id}}">
                <h6><i>Last added to</i></h6>
                <h5>Watchlist</h5>
            </a>
            <hr>
            <div id="user-watchlist" class="row">

                {{>listMovieCardAPI list=lastMovieWL}}

                {{>listSeriesCardAPI list=lastSeriesWL}}

            </div>
        </div>

        <div class="col-md-4 user-columns">
            <a href="/profile/likes?id={{theUser.id}}">
                <h6><i>Last added to</i></h6>
                <h5>Likes</h5>
            </a>
            <hr>
            <div id="user-likes" class="row">

                {{>listMovieCardAPI list=lastMovieLK}}

                {{>listSeriesCardAPI list=lastSeriesLK}}

            </div>
        </div>

        <div class="col-md-4 user-columns">
            <a href="/profile/seen?id={{theUser.id}}">
                <h6><i>Last added to</i></h6>
                <h5>Seen</h5>
            </a>
            <hr>
            <div id="user-seen" class="row">

                {{>listMovieCardAPI list=lastMovieSN}}

                {{>listSeriesCardAPI list=lastSeriesSN}}

            </div>
        </div>
        {{/if}}

    </article>

</section>