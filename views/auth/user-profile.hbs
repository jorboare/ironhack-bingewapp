<section class="container">
    <article class="row justify-content-center">
        <div class="col-md-8 user">
            <figure>
                <img src="{{user.img}}" alt="{{user.name}} profile picture">
            </figure>
            <h2>Welcome {{user.name}}</h2>
            <hr>
            <a href="/edit?id={{user.id}}" class="btn btn-info">Edit profile</a>
            <a href="/delete?id={{user.id}}" class="btn btn-info">Delete profile</a>

        </div>
    </article>
</section>