<section class="container">
    <article class="row justify-content-center">
        <div class="col-md-6">

            <h2>Log in to your account:</h2>
            <br>
            <form action="/login" method="POST">
                <div class="form-group">
                    <label for="usernameInput" {{#if errorMsg}}class="label-invalid"{{/if}}>Username:</label>
                    <input name="username" type="text" class="form-control {{#if errorMsg}}is-invalid{{/if}}" id="usernameInput"
                        aria-describedby="usernameHelp">
                </div>
                <div class="form-group">
                    <label for="pswdInput" {{#if errorMsg}}class="label-invalid"{{/if}}>Password:</label>
                    <input name="password" type="password" class="form-control {{#if errorMsg}}is-invalid{{/if}}" id="pswdInput">
                </div>
                <button type="submit" class="btn btn-info">Submit</button>

                {{#if errorMsg}}
                <p style="margin-top: 10px;background: #dc3545; color: white; text-align: center; padding: 10px">
                    {{errorMsg}}</p>
                {{/if}}

            </form>

        </div>
    </article>
</section>