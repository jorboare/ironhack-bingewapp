<section class="container">
    <article class="row justify-content-center">
        <div class="col-md-6">

            <h2>Log in!</h2>
            <br>
            <form action="/login" method="POST">
                <div class="form-group">
                    <label for="emailInput">Email address:</label>
                    <input name="username" type="email" class="form-control" id="emailInput"
                        aria-describedby="emailHelp">
                </div>
                <div class="form-group">
                    <label for="pswdInput">Password:</label>
                    <input name="password" type="password" class="form-control" id="pswdInput">
                </div>
                <button type="submit" class="btn btn-info">Submit!</button>

                {{#if errorMsg}}
                <p style="margin-top: 10px;background: red; color: white; text-align: center; padding: 10px">
                    {{errorMsg}}</p>
                {{/if}}

            </form>

        </div>
    </article>
</section>